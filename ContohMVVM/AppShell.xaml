<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContohMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ContohMVVM.Views"
    Shell.FlyoutBehavior="Disabled" FlyoutIcon="moon.png">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            <Image Source="moon.png"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calc App">
        <ShellContent
        ContentTemplate="{DataTemplate view:CalcView}" />
    </FlyoutItem>

     <FlyoutItem Title="Command App">
        <ShellContent
        ContentTemplate="{DataTemplate view:CommandView}" />
    </FlyoutItem>
   

</Shell>


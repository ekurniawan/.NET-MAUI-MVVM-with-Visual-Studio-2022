<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContohMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ContohMVVM.Views"
     FlyoutIcon="moon.png">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            <Image Source="moon.png"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calc App" Icon="moon.png">
        <ShellContent
        ContentTemplate="{DataTemplate view:CalcView}" />
    </FlyoutItem>

     <FlyoutItem Title="Command App" Icon="sun.png">
        <ShellContent
        ContentTemplate="{DataTemplate view:CommandView}" />
    </FlyoutItem>

    <FlyoutItem Title="Customer View" Icon="moon.png">
        <ShellContent ContentTemplate="{DataTemplate view:CustomerView}" />
    </FlyoutItem>
    <FlyoutItem Title="List Of Customers" Icon="starfield.png">
        <ShellContent ContentTemplate="{DataTemplate view:CustomersView}" />
    </FlyoutItem>

    <TabBar>
        <Tab Title="Calc App" Icon="moon.png">
            <ShellContent ContentTemplate="{DataTemplate view:CalcView}" />
        </Tab>
        <Tab Title="Command App" Icon="sun.png">
            <ShellContent ContentTemplate="{DataTemplate view:CommandView}" />
        </Tab>
    </TabBar>

</Shell>

